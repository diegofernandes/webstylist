= form_for @confection do |f|
    -if @confection.errors.any?
        #error_explanation
            %h2= pluralize(@confection.errors.count, "error")

        %ul
            -@confection.errors.full_messages.each do |msg|
                %li= msg

    .field.input-group
        =f.label :name
        =f.text_field :name, :class=>"form-control"

    .field.input-group
        =f.label :code
        =f.text_area :code, :class=>"form-control"

    .actions.input-group
        =f.submit :value => "Save", :class => 'btn btn-primary'
