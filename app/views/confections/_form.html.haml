= form_for @confection do |f| 
    -if @confection.errors.any?
        #error_explanation
            %h2= pluralize(@confection.errors.count, "error") 
        
        %ul
            -@confection.errors.full_messages.each do |msg| 
                %li= msg 
      
    .field
        =f.label :name
        =f.text_field :name

    .field
        =f.label :code
        =f.text_area :code

    .actions
        = f.submit
